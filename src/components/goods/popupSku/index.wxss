.choice-spec {
    background-color: #fff;
    width: 100vw;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
    z-index: 5;
}

.choice-spec .header {
    border-bottom: 1px solid #F8F8F8;
}

.choice-spec .header .goods-img {
    display: flex;
    align-items: center;
}

.choice-spec .header .goods-img image {
    position: absolute;
    top: -30px;
    left: 15px;
    width: 90px;
    height: 90px;
    border-radius: 3px;
    box-shadow: 2.5px 0px 5px rgba(0, 0, 0, 0.1);
}

.choice-spec .header .goods-img .goods-title {
    margin-left: 120px;
    padding-top: 15px;
    display: block;
    overflow: hidden;
    height: 60px;
}

.choice-spec .header .goods-img .goods-title text {
    font-weight: bold;
    font-size: 14px;
    line-height: 14px;
    height: 14px;
    display: block;
    overflow: hidden;
    color: #FF635C;
}

.choice-spec .header .goods-img .goods-title label {
    font-size: 12px;
    line-height: 14px;
    color: #999999;
    display: block;
    overflow: hidden;
    margin-top: 8px;
    padding-right: 10px;
}

.choice-spec .close-action {
    font-size: 12px;
    color: #666666;
    position: absolute;
    right: 15px;
    top: 15px;
}
.choice-spec .close-action image{
    width: 8px;
    height: 8px;
}

.choice-spec .spec-list {
    padding: 0 15px 0 0;
    display: flex;
    flex-direction: column;
}

.choice-spec .spec-list .item {
}

.choice-spec .spec-list .item .title {
    font-size: 14px;
    line-height: 14px;
    color: #999999;
    margin-left: 15px;
    display: block;
}

.choice-spec .spec-list .item:nth-child(1) .title {
    margin-top: 15px;
}

.choice-spec .spec-list .item .title {
}

.choice-spec .spec-list .item .spec {
    display: flex;
    justify-content: flex-start;
    flex-direction: row;
    flex-wrap: wrap;
    padding-bottom: 15px;
}

.choice-spec .spec-list .item .spec .spec-title {
    font-size: 14px;
    color: #333;
    background-color: #F8F8F8;
    padding: 4px 15px;
    border-radius: 3px;
    margin-top: 15px;
    margin-left: 15px;
}

.choice-spec .spec-list .item .spec .spec-title.active {
    background-color: #FF635C;
    color: #ffffff;
}

.choice-spec .number {
    padding: 15px;
    border-top: 1px solid #F8F8F8;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.choice-spec .number text {
    font-size: 14px;
    color: #999999;
}

.choice-spec .number fa-stepper {

}

.choice-spec .footer {
    display: flex;
    justify-content: space-between;
}

.choice-spec .footer fa-button {
    width: 100%;
}

