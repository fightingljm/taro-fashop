.page-grid-nav-bar {
    padding: 15px 0 0px 0;
    overflow: hidden;
    display: block;
    background-color: #fff;
}

.page-grid-nav-bar .body {
    /*display: flex;*/
    /*flex-wrap: wrap;*/
    /*flex-direction: column;*/
}

.page-grid-nav-bar section {
    text-align: center;
    margin-bottom: 15px;
    display: block;
    float: left;
}

.page-grid-nav-bar section image {
    width: 48px;
    height: 48px;
    margin-bottom: 4px;
}

.page-grid-nav-bar section text {
    font-size: 12px;
    color: #333333;
    display: block;
    width: 100%;
    height: 12px;
    line-height: 12px;
}

.page-grid-nav-bar .rows-1 {
    height: 80px;
}

.page-grid-nav-bar .rows-2 {
    height: 160px;
}

.page-grid-nav-bar .rows-3 {
    height: 240px;
}

.page-grid-nav-bar .rows-4 {
    height: 320px;
}

.page-grid-nav-bar .column-1 {
    width: 100vw
}

.page-grid-nav-bar .column-2 {
    width: 50vw
}

.page-grid-nav-bar .column-3 {
    width: 33.333vw
}

.page-grid-nav-bar .column-4 {
    width: 25vw
}

.page-grid-nav-bar .column-5 {
    width: 20vw
}