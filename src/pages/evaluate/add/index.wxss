fa-panel{margin-bottom: 10px;display: block}
.refund-goods-card {
}

.refund-goods-card .item {
    padding: 15px;
    border-bottom: 1px solid #F8F8F8;
}

.refund-goods-card .content {
    display: flex;
}
.refund-goods-card .item .image{
    margin-right: 15px;
}
.refund-goods-card .item image {
    width: 80px;
    height: 80px;
    display: block;
}

.refund-goods-card .item .body {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.refund-goods-card .item .body text {
    font-size: 14px;
    font-weight: bold;
    color: #333;
    line-height: 18px;
    display: block;
    overflow: hidden;
    margin-bottom: 10px;
}
.refund-goods-card .item .end{
    text-align: right;
    margin-left: 20px;
}
.refund-goods-card .item .end .price {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
    line-height: 14px;
    display: block;
}

.refund-goods-card .item .end .number {
    font-size: 14px;
    margin-bottom: 10px;
    line-height: 14px;
    display: block;
}
.refund-goods-card .item .footer{
    display: flex;
    justify-content: flex-end;
}