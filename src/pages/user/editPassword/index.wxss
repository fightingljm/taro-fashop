.page {
    background-color: #ffffff;
    padding: 20px 30px 0 30px;
    height: 100vh;
}

.form {
    display: block;
    overflow: hidden;
    background-color: #ffffff;
}

.form .input-item {
    border-bottom: 1px solid #F8F8F8;
    margin-bottom: 15px;
}
.form .header{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 40px;
}
.form .header image{
    width:85px;
    height: 85px;
    margin-bottom: 20px;
}
.form .header text{
    font-size: 14px;
    color: #333333;
}

.form .input-item input {
    font-size: 16px;
    padding: 10px 0;
}

.form .username {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}


.form .username label {
    font-size: 14px;
    line-height: 28px;
    color: #666666;
    background-color: #F8F8F8;
    padding: 2px 20px;
    border-radius: 100px;
}
.form .username label.onemore{
    background-color: #F7B3BB;
    color: #F06A1F;
}
.form .btn-area {
    margin-bottom: 15px;
}
