.pay-result{
    background-color: #FFFFFF;
    height: 100vh;
}
.pay-result .result{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.pay-result .icon{
    margin-top: 40px;
    width: 60px;
    height: 60px;
    border-radius: 100px;
    margin-bottom: 10px;
}
.pay-result .desc{
    font-size: 14px;
    line-height: 14px;
    margin-bottom: 10px;
    display: block;
    font-weight: bold;
}
.pay-result .price{
    font-size: 18px;
    line-height: 18px;
    color: #FF635C;
    margin-bottom: 10px;
    font-weight: bold;
    display: block;
}
.pay-result .way{
    font-size: 12px;
    line-height: 12px;
    color: #999;
    display: block;

}
.pay-result .button-area{
    padding: 40px;
    display: flex;
    flex-direction: column;
}
.pay-result .button-area .portal{
    margin-bottom: 15px;
}